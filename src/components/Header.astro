---
import { uiCopy } from '../data/site-content';
---

<header class="site-header">
  <div class="container header-inner">
    <a href="#top" class="brand" aria-label="RebSem personal site">
      <span class="brand-mark">RS</span>
      <span class="brand-label">rebsem.dev</span>
    </a>

    <nav class="header-nav" aria-label="Main navigation">
      <a href="#about" data-i18n-ru={uiCopy.nav.about.ru} data-i18n-en={uiCopy.nav.about.en}>{uiCopy.nav.about.ru}</a>
      <a href="#github" data-i18n-ru={uiCopy.nav.github.ru} data-i18n-en={uiCopy.nav.github.en}>{uiCopy.nav.github.ru}</a>
      <a href="#projects" data-i18n-ru={uiCopy.nav.projects.ru} data-i18n-en={uiCopy.nav.projects.en}>{uiCopy.nav.projects.ru}</a>
      <a href="#contact" data-i18n-ru={uiCopy.nav.contact.ru} data-i18n-en={uiCopy.nav.contact.en}>{uiCopy.nav.contact.ru}</a>
    </nav>

    <button
      id="locale-toggle"
      class="locale-toggle"
      type="button"
      data-toggle-ru="EN"
      data-toggle-en="RU"
      data-label-ru={uiCopy.localeToggleLabel.ru}
      data-label-en={uiCopy.localeToggleLabel.en}
      aria-label={uiCopy.localeToggleLabel.ru}
    >
      EN
    </button>
  </div>
</header>
