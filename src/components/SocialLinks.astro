---
import { email, githubUsername, linkedinUrl, telegramUrl, uiCopy } from '../data/site-content';

interface Props {
  className?: string;
}

const { className = 'social-links' } = Astro.props;
const profileUrl = `https://github.com/${githubUsername}`;
---

<nav
  class={className}
  aria-label={uiCopy.footer.socialAria.en}
  data-i18n-aria-ru={uiCopy.footer.socialAria.ru}
  data-i18n-aria-en={uiCopy.footer.socialAria.en}
>
  <a
    class="social-link"
    href={profileUrl}
    target="_blank"
    rel="noreferrer"
    aria-label={uiCopy.social.github.en}
    data-i18n-aria-ru={uiCopy.social.github.ru}
    data-i18n-aria-en={uiCopy.social.github.en}
  >
    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3"></path>
      <path d="M15 21v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
    </svg>
    <span class="sr-only" data-i18n-ru={uiCopy.social.github.ru} data-i18n-en={uiCopy.social.github.en}>
      {uiCopy.social.github.en}
    </span>
  </a>

  <a
    class="social-link"
    href={telegramUrl}
    target="_blank"
    rel="noreferrer"
    aria-label={uiCopy.social.telegram.en}
    data-i18n-aria-ru={uiCopy.social.telegram.ru}
    data-i18n-aria-en={uiCopy.social.telegram.en}
  >
    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M4 11l16 -8l-4 18l-5 -4l-3 3l1 -5l8 -7"></path>
    </svg>
    <span class="sr-only" data-i18n-ru={uiCopy.social.telegram.ru} data-i18n-en={uiCopy.social.telegram.en}>
      {uiCopy.social.telegram.en}
    </span>
  </a>

  <a
    class="social-link"
    href={`mailto:${email}`}
    aria-label={uiCopy.social.email.en}
    data-i18n-aria-ru={uiCopy.social.email.ru}
    data-i18n-aria-en={uiCopy.social.email.en}
  >
    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"></path>
      <path d="M3 7l9 6l9 -6"></path>
    </svg>
    <span class="sr-only" data-i18n-ru={uiCopy.social.email.ru} data-i18n-en={uiCopy.social.email.en}>
      {uiCopy.social.email.en}
    </span>
  </a>

  <a
    class="social-link"
    href={linkedinUrl}
    target="_blank"
    rel="noreferrer"
    aria-label={uiCopy.social.linkedin.en}
    data-i18n-aria-ru={uiCopy.social.linkedin.ru}
    data-i18n-aria-en={uiCopy.social.linkedin.en}
  >
    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M8 11v5"></path>
      <path d="M8 8v.01"></path>
      <path d="M12 16v-5"></path>
      <path d="M16 16v-3a2 2 0 1 0 -4 0"></path>
      <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"></path>
    </svg>
    <span class="sr-only" data-i18n-ru={uiCopy.social.linkedin.ru} data-i18n-en={uiCopy.social.linkedin.en}>
      {uiCopy.social.linkedin.en}
    </span>
  </a>
</nav>
